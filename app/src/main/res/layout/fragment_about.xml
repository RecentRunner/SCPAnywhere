<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/about_wrapper">

                <ImageView
                    android:id="@+id/image"
                    style="@style/about_image"
                    android:contentDescription="@string/about_image" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/description"
                    style="@style/about_description" />
            </LinearLayout>

            <View
                style="@style/about_separator" />

            <LinearLayout
                style="@style/about_item">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/about_version"
                    android:padding="@dimen/about_text_padding"
                    style="@style/about_text_item" />
            </LinearLayout>

            <View
                style="@style/about_separator" />

            <LinearLayout
                style="@style/about_item">

                <ImageView
                    style="@style/about_image_item"
                    app:tint="@color/about_play_store_color"
                    android:src="@drawable/about_icon_google_play"
                    android:contentDescription="@string/about_image" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/play_store"
                    android:text="@string/about_play_store"
                    style="@style/about_text_item" />
            </LinearLayout>

            <View
                style="@style/about_separator" />

            <LinearLayout
                style="@style/about_item">

                <ImageView
                    style="@style/about_image_item"
                    app:tint="@color/about_github_color"
                    android:src="@drawable/about_icon_github"
                    android:contentDescription="@string/about_image"/>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/github"
                    android:text="@string/about_github"
                    style="@style/about_text_item" />
            </LinearLayout>

            <View
                style="@style/about_separator" />

            <LinearLayout
                style="@style/about_item">

                <ImageView
                    style="@style/about_image_item"
                    android:contentDescription="@string/about_image" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/paypal"
                    style="@style/about_text_item" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>