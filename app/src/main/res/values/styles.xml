<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Base application theme. -->
        <!--<item name="colorPrimary">@color/primaryColorSCP</item>-->

        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
    </style>

    <style name="OverflowMenu" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">8.0dip</item>
    </style>

    <style name="listItemTextView" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- List of available app themes -->
    <style name="AppTheme.SCP" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/primaryLightColorSCP</item>
        <item name="colorSecondary">@color/secondaryColorSCP</item>
    </style>

