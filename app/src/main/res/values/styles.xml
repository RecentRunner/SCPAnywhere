<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="actionOverflowMenuStyle">@style/AppTheme.OverflowMenu</item>
        <item name="navigationViewStyle">@style/AppTheme.NavigationViewStyle</item>

        <item name="navigationMenuBackground">?attr/colorSurface</item>
        <item name="toolbarBackground">?attr/colorPrimary</item>
        <item name="navigationItemTextColor">@color/mtrl_navigation_item_text_color</item>
        <item name="overflowMenuBackground">@drawable/mtrl_popupmenu_background</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.NavigationViewStyle" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">@style/AppTheme.NavigationViewItemTextAppearance</item>
    </style>

    <style name="AppTheme.NavigationViewItemTextAppearance" parent="@style/TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.OverflowMenu" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">8.0dip</item>
        <item name="android:textSize">16sp</item>
        <item name="android:popupBackground">?attr/overflowMenuBackground</item>
    </style>

    <style name="listItemTextView" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- List of available app themes -->
    <style name="AppTheme.SCP" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/rosewood</item>
        <item name="colorSecondary">@color/rosewood</item>
        <item name="toolbarBackground">@color/whiteSmoke</item>
        <item name="navigationMenuBackground">@color/whiteSmoke</item>
        <item name="android:colorBackground">@color/whiteSmoke</item>
        <item name="colorBackgroundFloating">@color/whiteSmoke</item>
        <item name="overflowMenuBackground">@color/whiteSmoke</item>
    </style>

    <style name="AppTheme.Warm" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/primaryDarkColorBrown</item>
        <item name="colorSecondary">@color/primaryDarkColorBrown</item>
        <item name="toolbarBackground">@color/beigeWarmColor</item>
        <item name="navigationMenuBackground">@color/beigeWarmColor</item>
        <item name="android:colorBackground">@color/beigeWarmColor</item>
        <item name="colorBackgroundFloating">@color/beigeWarmColor</item>
        <item name="overflowMenuBackground">@color/beigeWarmColor</item>
    </style>

    <style name="AppTheme.Night" parent="AppTheme.NoActionBar">
    </style>

    <style name="AppTheme.Navy" parent="AppTheme.NoActionBar">
    </style>

    <style name="AppTheme.EBook" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/secondaryColorGray</item>
        <item name="colorSecondary">@color/secondaryColorGray</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="navigationItemTextColor">@android:color/black</item>
        <item name="textColorAlertDialogListItem">@android:color/black</item>
        <item name="toolbarBackground">@android:color/white</item>
        <item name="navigationMenuBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorBackgroundFloating">@android:color/white</item>
        <item name="overflowMenuBackground">@android:color/white</item>
    </style>

    <style name="about_wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="about_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="about_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="about_description" parent="@android:style/TextAppearance">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/about_page_description</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">@dimen/about_description_text_size</item>
    </style>

    <style name="about_separator">
        <item name="android:layout_height">@dimen/about_separator_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/about_separator_color</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="about_text_item" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/about_item_text_size</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="about_image_item" parent="@android:style/TextAppearance">
        <item name="android:layout_width">@dimen/about_icon_size</item>
        <item name="android:layout_height">@dimen/about_icon_size</item>
        <item name="android:paddingLeft">@dimen/about_icon_padding</item>
        <item name="android:paddingRight">@dimen/about_icon_padding</item>
        <item name="android:paddingTop">0px</item>
        <item name="android:paddingBottom">0px</item>
    </style>
</resources>